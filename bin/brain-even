#!/usr/bin/env php

<?php

use function Src\Cli\greeting;
use function Utilites\RandomNum\isEven;
use function cli\line;
use function cli\prompt;

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';

if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

function brainEven()
{
    $name = greeting();
    line('Answer "yes" if the number is even, otherwise answer "no".');
    $attempt = 3;

    for ($i = 0; $i < $attempt; $i += 1) {
        $randomNum = random_int(0, 100);
        line("Question: {$randomNum}");
        $answer = prompt('Your answer');
        $correctAnswer = (isEven($randomNum)) ? 'yes' : 'no';

        if ($answer === $correctAnswer) {
            print_r("Correct!\n");
        } else {
            return "'{$answer}' is wrong answer ;(. Correct answer was '{$correctAnswer}'\nLet's try again, {$name}\n";
        }
        if ($i === 2) {
            return "Congratulations, {$name}!\n";
        }
    }
}

print_r(brainEven());